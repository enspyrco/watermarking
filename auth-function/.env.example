# Discord OAuth credentials (from Discord Developer Portal)
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_REDIRECT_URI=http://localhost:5000/auth/callback

# Firebase service account (path to JSON file or JSON string)
FIREBASE_SERVICE_ACCOUNT=/path/to/firebase-service-account.json
# OR for Deno Deploy:
# FIREBASE_SERVICE_ACCOUNT_JSON={"project_id":"...", ...}
